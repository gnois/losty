var json = require('cjson.safe')

var K = {}

-- func can be crypt(key).encrypt
K.encode = \obj, func ->
	if obj
		var str, err = json.encode(obj)
		if str
			if func
				str = func(str)
			return ngx.encode_base64(str)
		return str, err

-- func can be crypt(key).decrypt
K.decode = \str, func ->
	if str
		str = ngx.decode_base64(str)
		if func
			str = func(str)
		return json.decode(str)



return K