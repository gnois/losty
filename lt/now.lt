-- From https://www.cryptobells.com/openresty-time-resolution-with-ffi-a-more-accurate-approach/
-- microsecond precision

var ffi = require("ffi")
ffi.cdef(`
	typedef long time_t; 
 	typedef struct timeval {
		time_t tv_sec;
		time_t tv_usec;
	} timeval;
	
	int gettimeofday(struct timeval* t, void* tzp);
`)

return ->
	var tmv = ffi.new("timeval")
	ffi.C.gettimeofday(tmv, nil)
	return tonumber(tmv.tv_sec), tonumber(tmv.tv_usec)

